package application;

import java.net.URL;
import java.util.ResourceBundle;

import application.chara.GirlInterface;
import application.chara.Kei;
import application.chara.ConoHa;
import application.chara.Anzu;
import application.chara.Claudia;
import application.chara.Query;
import application.chara.Unity;
import javafx.animation.KeyFrame;
import javafx.animation.Timeline;
import javafx.fxml.FXML;
import javafx.fxml.Initializable;
import javafx.scene.image.ImageView;
import javafx.scene.input.MouseEvent;
import javafx.util.Duration;


public class MainController implements Initializable {

	/* コントロール */
	@FXML private ImageView kei;
	@FXML private ImageView conoHa;
	@FXML private ImageView anzu;
	@FXML private ImageView claudia;
	@FXML private ImageView query;
	@FXML private ImageView unity;

	/* 調整定数 */
	private final int TIMER_SPEED = 10;

	/* キャラクター定義オブジェクト */
	private GirlInterface[] chara = new GirlInterface[6];

	/* ---===---===---===---===---===---===--- */

	@Override
	public void initialize(URL location, ResourceBundle resources) {
		chara[0] = new Kei();
		chara[1] = new ConoHa();
		chara[2] = new Anzu();
		chara[3] = new Claudia();
		chara[4] = new Query();
		chara[5] = new Unity();

		Timeline timer = new Timeline(new KeyFrame(Duration.millis(TIMER_SPEED), e -> {
			chara[0].ifAbsentSetImg(kei);
			chara[1].ifAbsentSetImg(conoHa);
			chara[2].ifAbsentSetImg(anzu);
			chara[3].ifAbsentSetImg(claudia);
			chara[4].ifAbsentSetImg(query);
			chara[5].ifAbsentSetImg(unity);

			for(GirlInterface girl : chara){
				/* キャラクタの向きによってキャラクタを傾かせる */
				girl.tilt();

				/* キャラクターの移動 */
				girl.move();

				/* タイマーのインクリメント */
				girl.incrTime();
			}
		}));
		timer.setCycleCount(Timeline.INDEFINITE);
		timer.play();
	}


	@FXML
	public void onMouseDragged(MouseEvent e){
		for(GirlInterface girl : chara){
			girl.moveTo(e.getX(), e.getY());  // 220 <- ?
		}
	}

	/* ---===---===---===---===---===---===--- */


}
