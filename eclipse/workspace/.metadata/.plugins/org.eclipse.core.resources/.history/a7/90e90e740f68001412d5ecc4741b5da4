package application.chara;

import javafx.scene.image.ImageView;

/**
 * キャラクタ画像とメッセージ画像の管理を一括化します
 */
public class GirlStruct {

	/* -=-=-=-=-=-=-=-=- */
	
	private final int CHARA_IMG_HEIGHT = -40;

	private ImageView chara = null;
	private ImageView msg   = null;

	/* -=-=-=-=-=-=-=-=- */
	

	/**
	 * キャラクタ画像とメッセージ画像を設定します
	 * @param chara キャラクタ画像
	 * @param msg メッセージ画像
	 */
	public GirlStruct(ImageView chara, ImageView msg){
		this.chara = chara;
		this.msg   = msg;
	}


	/* ---===---===---===---===---===---===--- */
	
	
	/**
	 * メッセージ画像を非表示にします
	 */
	public void hideMsg(){	
		msg.setVisible(false);
	}
	
	/**
	 * メッセージ画像を表示します
	 */
	public void showMsg(){
		msg.setVisible(true);
	}
	
	
	/* ---===---===---===---===---===---===--- */



	/**
	 * キャラクタ画像とメッセージ画像のX座標を最適設定します
	 * @param x X座標
	 */
	public void setX(double x){
		chara.setX(x);
		
		double msgX = x - (chara.getFitWidth() / 2);
		msg.setX(msgX);
	}

	/**
	 * キャラクタ画像とメッセージ画像のY座標を最適設定します
	 * @param y Y座標
	 */
	public void setY(double y){
		chara.setY(y);
		msg.setY(CHARA_IMG_HEIGHT + y);
	}

	/**
	 * キャラクタ画像のRotateを設定します
	 * @param value Rotate
	 */
	public void setRotate(double value){
		chara.setRotate(value);
	}

	/**
	 * キャラクタ画像のScaleXを設定します
	 * @param x X座標
	 */
	public void setScaleX(double x){
		chara.setScaleX(x);
	}

	/* -=-=-=-=-=-=-=-=- */


	/**
	 * キャラクタ画像のX座標を返します
	 * @return キャラクタ画像のX座標
	 */
	public double getX(){ return chara.getX(); }

	/**
	 * キャラクタ画像のY座標を返します
	 * @return キャラクタ画像のY座標
	 */
	public double getY(){ return chara.getY(); }

	/**
	 * キャラクタ画像のScaleXを返します
	 * @return キャラクタ画像のScaleX
	 */
	public double getScaleX(){ return chara.getScaleX(); }


	/* ---===---===---===---===---===---===--- */

}
