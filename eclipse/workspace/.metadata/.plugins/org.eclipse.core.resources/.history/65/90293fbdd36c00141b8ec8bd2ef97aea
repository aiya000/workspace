package application.chara;

import application.Main;
import javafx.scene.image.ImageView;


public abstract class AbstractReceptionGirl implements ReceptionGirlInterface {

	private ImageView girl = null;

	/* ---===---===---===---===---===---===--- */


	@Override
	public void ifAbsentSetImg(ImageView img) {
		if(girl == null){
			this.girl = img;

			img.setX(Main.getClientWidth() - 200);
			img.setY(Main.getClientHeight() - 200);
		}
	}

}
